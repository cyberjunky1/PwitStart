<h1>Etudiants</h1>

<div class="btn-toolbar" style="width: 90%" align="center">
	<div class="btn-group pull-left" id="">
		<a class="btn btn-mini" onclick="edit('N');"><i class="icon-plus"></i></a>
	</div>
</div>


<div  align="center" class='scrolPage'>
<table  class="table table-hover table-bordered table-condensed">
<tr>
<th>Num</th>
<th>Nom</th>
<th>Prénom</th>
<th>Formation</th>
</tr>
 {assign var='nbr' value='0'}
 {foreach from=$etud item=row}
 	{$nbr=$nbr+1}
 	<tr>
 		<td>{$nbr}</td>
 		<td>{$row.ETU_NOM}</td>
 		<td>{$row.ETU_PRENOM}</td>
 		<td>{$row.FRM_NAME}</td>
 	

 		<td style="width: 60px">
 		
 			<a class="btn btn-mini"onclick="edit('E','{$row.ETU_ID}',
					'{$row.ETU_NOM|mwAddslashes}','{$row.ETU_PRENOM|mwAddslashes}','{$row.ETU_FRM_ID}'
				)"><i class="icon-edit"></i></a> 
 		
 			<a class="btn btn-mini" onclick="del('{$row.ETU_ID}');">
	 			<i class="icon-trash"></i>
	 		</a>
 		</td>
 	</tr>
 {/foreach}
 
</table>
</div>



<div title="Etudiant" id="etudDialog" style="display:none; background-color:#f7f7f9">
<h4>Ajouter/Editer</h4>
<form action="POST" action="#" id="etudDialog" name="etudDialog">
<input type="hidden" id="ETU_ID" name="ETU_ID">
<table style="width: 95%">

	<tr>
		<td align="right" style="width: 40%">Nom</td>
		<td><input type="text" id="ETU_NOM" name="ETU_NOM"></td>
	</tr>
	<tr>
		<td align="right" style="width: 40%">Prénom</td>
		<td><input type="text" id="ETU_PRENOM" name="ETU_PRENOM"></td>
	</tr>
	<tr>
		<td align="right" style="width: 40%">Formation</td>
		<td>{html_options name="ETU_FRM_ID" id="ETU_FRM_ID" options=$formationList }</td>
	</tr>


</table>
</form>
</div>
