<?php
class InformationsController extends MwController {

	protected $subViews = array('infUser','infFormations','infEtudiants');
	
	/**
	 * actionInit
	 */
	public function actionInit(){


		include_once '../app/mwController/infUserController.Class.php';
		include_once '../app/mwController/infEtudiantsController.Class.php';
		include_once '../app/mwController/infFormationsController.Class.php';
		

	}
	
	/**
	 * actionBeforDisplay
	 */
	public function actionBeforDisplay(){
		$tab = $_SESSION['MwGet'];
		$frame="";
		$active = 0;
		if(isset($tab[0])){
			$frame=$tab[0];
		}else{
			$frame="infEtudiants";
		}
		
		$smarty = MwSmarty::getInstance();

		$smarty->assign('frame',$frame);
		$smarty->assign('frametpl',$frame.".tpl");
		$smarty->assign('filejs',$frame.".js");
		
		
		
	}
	
}

