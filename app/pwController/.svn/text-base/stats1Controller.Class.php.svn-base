<?php
class stats1Controller extends MwController {

	/**
	 * actionBeforDisplay
	 */
	public function actionBeforDisplay(){
		$smarty = MwSmarty::getInstance();
		$listStat1 = MwPaiements::stat1();
		
		$nbr = 1;
		$total1 = 0;
		$total2 = 0;
		foreach ($listStat1 as &$row){
			$row['num'] = $nbr;
			$total1 += $row['PREVISION'];
			$total2 += $row['PAIEMENT'];
			$nbr++;
		}
		
		
		$smarty->assign( 'listStat1',$listStat1 );
		$smarty->assign( 'total1',$total1 );
		$smarty->assign( 'total2',$total2 );
	}

	
}

